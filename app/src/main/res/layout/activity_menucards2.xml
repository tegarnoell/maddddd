<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".menucards2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".Menucards1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="660dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="700dp"
                            android:layout_height="700dp"
                            android:layout_marginStart="-170dp"
                            android:layout_marginTop="-550dp"
                            android:background="@drawable/round"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView30"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="25dp"
                            app:srcCompat="@drawable/card" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shinta"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            android:onClick="MoveLayout"
                            app:srcCompat="@drawable/sumitracard" />

                        <ImageView
                            android:id="@+id/rama"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            android:onClick="MoveLayout2"
                            app:srcCompat="@drawable/ramacard" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/janaka"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            android:onClick="MoveLayout3"
                            app:srcCompat="@drawable/kosalyacard" />

                        <ImageView
                            android:id="@+id/kekayi"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lockedcard" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/laksmana"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lockedcard" />

                        <ImageView
                            android:id="@+id/dasarata"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lockedcard" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tes"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lockedcard" />

                        <ImageView
                            android:id="@+id/tes2"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/lockedcard" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/hhh"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_weight="0.5"
                            android:padding="10dp"
                            app:srcCompat="@drawable/lockedcard" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:background="@drawable/roundgreen"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view3"
                    app:srcCompat="@drawable/homenew" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:onClick="MoveLayout3"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view3"
                    app:srcCompat="@drawable/cards" />

                <ImageView
                    android:id="@+id/exitalert2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView19"
                    app:layout_constraintTop_toTopOf="@+id/view3"
                    app:srcCompat="@drawable/exit" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
